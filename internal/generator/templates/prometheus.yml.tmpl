# Prometheus configuration for {{.ProjectName}}
# Generated by dockstart

global:
  scrape_interval: {{if .ScrapeInterval}}{{.ScrapeInterval}}{{else}}30s{{end}}
  evaluation_interval: 30s
  external_labels:
    project: '{{.ProjectName}}'
    environment: 'development'

# Alertmanager configuration (optional, disabled by default in dev)
# alerting:
#   alertmanagers:
#     - static_configs:
#         - targets:
#           - alertmanager:9093

# Load rules once and periodically evaluate them
# rule_files:
#   - /etc/prometheus/rules/*.yml

scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    metrics_path: /metrics

  # Application metrics
  - job_name: '{{.ProjectName}}'
    static_configs:
      - targets: ['app:{{if .MetricsPort}}{{.MetricsPort}}{{else}}3000{{end}}']
    metrics_path: {{if .MetricsPath}}{{.MetricsPath}}{{else}}/metrics{{end}}
    scrape_interval: {{if .AppScrapeInterval}}{{.AppScrapeInterval}}{{else}}15s{{end}}
    scrape_timeout: 10s
{{if .HasWorker}}
  # Worker metrics
  - job_name: '{{.ProjectName}}-worker'
    static_configs:
      - targets: ['worker:{{if .WorkerMetricsPort}}{{.WorkerMetricsPort}}{{else}}{{if .MetricsPort}}{{.MetricsPort}}{{else}}3000{{end}}{{end}}']
    metrics_path: {{if .MetricsPath}}{{.MetricsPath}}{{else}}/metrics{{end}}
    scrape_interval: 30s
{{end}}
{{if .HasPostgres}}
  # PostgreSQL Exporter
  - job_name: 'postgres'
    static_configs:
      - targets: ['postgres-exporter:9187']
    scrape_interval: 30s
{{end}}
{{if .HasRedis}}
  # Redis Exporter
  - job_name: 'redis'
    static_configs:
      - targets: ['redis-exporter:9121']
    scrape_interval: 30s
{{end}}
